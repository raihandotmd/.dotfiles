# Sourcing ble.sh
source ~/.local/share/blesh/ble.sh

# ---- Aliases -----
alias lss="/bin/ls"
alias find="fzf"
alias cd="z"

# Vim
alias vimm="vim"
alias vim="nvim"
alias vimconfig="nvim ~/.config/nvim"

# bashes
alias breload="source ~/.bashrc"
alias brc="nvim ~/.bashrc"
alias bprofile="nvim ~/.bash_profile"


alias dev="cd $HOME/Public/dev" 
alias sbcloud="cd $HOME/Library/CloudStorage/ProtonDrive-justraihan@proton.me/second-brain/raihanmd"


# Eza (better ls)
alias ls="eza --icons=always"

# ---- Initialize Terminal -----

# Starship Prompt Shell
eval "$(starship init bash)"

# Zoxide (better cd)
eval "$(zoxide init bash)"

# !dependencies: homebrew, starship, zoxide, eza.

. "$HOME/.cargo/env"
